	<authorUrl>www.widgetfactorylimited.co.uk</authorUrl>
	<version>1.0.1</version>
	<description>GitHub Docs Content Plugin</description>
	<files>
		<filename plugin="githubdocs">githubdocs.php</filename>
		<filename>index.html</filename>
		<folder>parsedown</folder>
